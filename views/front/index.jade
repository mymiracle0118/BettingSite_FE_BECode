    script(src='https://code.jquery.com/jquery-3.5.1.min.js', integrity='sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=', crossorigin='anonymous')
    
    script.
      let svgContainer = document.querySelector('.bodymovinanim');
      let animItem = bodymovin.loadAnimation({
        wrapper: svgContainer,
        animType: 'svg',
        loop: true,
        path: `#{staticUrl}front/js/Loader-v6.0.json?ver=#{version}`
      });
      
      function getWidth() {
        var doc = document,
            w = window;
        var docEl = (doc.compatMode && doc.compatMode === 'CSS1Compat') ?
            doc.documentElement : doc.body;

        var width = docEl.clientWidth;
        var height = docEl.clientHeight;

        if (w.innerWidth && width > w.innerWidth) {
            width = w.innerWidth;
            height = w.innerHeight;
        }
        return width
      }

      IS_MOBILE = getWidth() < 1280 ? true : false
      IS_TABLET = getWidth() >= 768 ? true : false
      $(window).resize(function () {
        IS_MOBILE = getWidth() < 1280 ? true : false
        IS_TABLET = getWidth() >= 768 ? true : false
        if (!IS_MOBILE) {
          let el = document.querySelector(".sidebar-left")
          if (el) {
            el.style.removeProperty('display')
          }
        }
      });

      IP_ADDRESS = localStorage.getItem("clientAddr");

      DOMAIN = "#{domain}"
      LOGO_PATH = "#{logoPath}"
      THEME = "#{theme}"

      if(THEME == 'light'){
        if(DOMAIN == 'world777.com'){
          LOGO_PATH = `#{staticUrl}front/img/logo-blue.png?ver=#{version}`;
        }
        document.documentElement.dataset.theme = 'light';
      }
      else if(THEME == 'blue'){
        if(DOMAIN == 'world777.com'){
          LOGO_PATH = `#{staticUrl}front/img/logo-blue.png?ver=#{version}`;
        }
        document.documentElement.dataset.theme = 'blue';
      }
      else if(THEME == 'dark'){
        document.documentElement.dataset.theme = 'dark';
      }
    
